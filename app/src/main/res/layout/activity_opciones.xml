<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".Home">

    <ImageView
        android:id="@+id/tituloOpc"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:src="@drawable/detail"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenOpc"
        android:layout_width="360dp"
        android:layout_height="228dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/jardin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloOpc"
        app:layout_constraintVertical_bias="0.066"
        app:shapeAppearanceOverlay="@style/radius" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="346dp"
        android:layout_height="114dp"
        android:text="¡Bienvenido a Jardín Explorer! 🗺️ Descubre los secretos mejor guardados de Jardín, Antioquia, con nuestra app. Aquí podrás descubrir los planes más fascinantes, conocer restaurantes con sabores auténticos y encontrar el lugar perfecto para descansar. ¡Deja que la aventura comience! 🌄"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenOpc"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/btnExplorar"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/seagreen"
        android:text="Explorar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/btnRestaurantes"
        android:layout_width="250dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/btnExplorar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/seagreen"
        android:text="Restaurantes"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnAlojamiento"
        android:layout_width="250dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/btnRestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/seagreen"
        android:text="Alojamiento"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>
