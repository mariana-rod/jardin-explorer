<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliceblue"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imagenOpc"
        android:layout_width="406dp"
        android:layout_height="314dp"
        android:src="@drawable/jardin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tituloOpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagenOpc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="JardÃ­n Explorer"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.1"
        />

    <Button
        android:id="@+id/btnRestaurantes"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/seagreen"
        android:text="Restaurantes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloOpc"
        app:layout_constraintVertical_bias="0.42" />

    <Button
        android:id="@+id/btnAlojamiento"
        android:layout_width="250dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/btnRestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/seagreen"
        android:text="Alojamiento"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnExplorar"
        android:layout_width="250dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/btnAlojamiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/seagreen"
        android:text="Explorar"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>
